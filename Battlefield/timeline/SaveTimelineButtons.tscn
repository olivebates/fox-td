[sub_resource type="GDScript" id="GDScript_mp3o2"]
script/source = "extends Control
@onready var save_button := Button.new()
@onready var load_button := Button.new()

func _ready():
	# Save Button
	save_button.text = \"Save Timeline\"
	save_button.pressed.connect(func(): TimelineManager.save_timeline(0))  # slot 0
	add_child(save_button)
	
	# Load Button
	load_button.text = \"Load Timeline\"
	load_button.pressed.connect(func(): TimelineManager.load_timeline(0))  # slot 0
	load_button.position += Vector2(0, 20)
	add_child(load_button)
	
	# Optional: layout
	var vbox = VBoxContainer.new()
	vbox.add_child(save_button)
	vbox.add_child(load_button)
	add_child(vbox)
"

